<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         colors="true"
         verbose="true"
         stopOnFailure="false"
>
    <!-- Test Suites -->
    <testsuites>
        <testsuite name="Unit">
            <directory>tests/Unit</directory>
        </testsuite>
        <testsuite name="Feature">
            <directory>tests/Feature</directory>
        </testsuite>
    </testsuites>

    <!-- Code Coverage -->
    <coverage>
        <include>
            <directory suffix=".php">app</directory>
        </include>
        <exclude>
            <directory suffix=".php">app/Exceptions</directory>
            <directory suffix=".php">app/Http/Middleware</directory>
            <directory suffix=".php">app/Providers</directory>
        </exclude>
    </coverage>

    <!-- Environment Variables -->
    <php>
        <env name="APP_ENV" value="testing"/>
        <env name="APP_DEBUG" value="false"/>
        <env name="APP_KEY" value="base64:base64:oQJr4J8ZEX+ufFixMbZwybzbJRXTHCVoBTTn2PjvULo="/>
        <env name="CACHE_DRIVER" value="array"/>
        <env name="QUEUE_CONNECTION" value="sync"/>
        <env name="SESSION_DRIVER" value="array"/>
        <env name="MAIL_MAILER" value="array"/>
        <env name="BCRYPT_ROUNDS" value="4"/>
        <env name="DB_CONNECTION" value="mysql"/>
        <env name="DB_DATABASE" value="dating_db"/>
        <env name="DB_USERNAME" value="root"/>
        <env name="DB_PASSWORD" value="Password123!"/>
        <env name="TELESCOPE_ENABLED" value="false"/>
        <env name="PULSE_ENABLED" value="false"/>
    </php>

    <!-- Logging -->
    <logging>
        <log type="coverage-html" target="build/coverage"/>
        <log type="coverage-xml" target="build/coverage/coverage.xml"/>
        <log type="junit" target="build/junit.xml"/>
    </logging>

    <!-- Test Execution Settings -->
    <extensions>
        <extension class="PHPUnit\Extensions\Database\TestDatabase"/>
    </extensions>
</phpunit>
